<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <include file="cz/zeptejsepojistovaka/persistence/db/changelog/db.changelog-properties.xml" />


    <changeSet id="1.2-createThreadTable" author="Tomas Skalicky">
        <createTable tableName="${threadTable.name}">
            <column name="${threadTable.idColumn.name}" type="${int11}" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="thema" type="${varchar255}">
                <constraints nullable="false" />
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="${threadTable.name}" />
        </rollback>
    </changeSet>

</databaseChangeLog>
